        "commands": [
            {
                "command": "dateTime.show",
                "title": "Show Date & Time"
            },
            {
                "command": "dateTime.hide",
                "title": "Hide Date & Time"
            },
            {
                "command": "extension.calendar",
                "title": "Calendar"
            }
        ],
        "keybindings": [
            {
                "command": "extension.calendar",
                "key": "Ctrl+Cmd+C"
            }
